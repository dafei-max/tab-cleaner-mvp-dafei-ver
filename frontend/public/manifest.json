{
  "manifest_version": 3,
  "name": "Tab Cleaner MVP",
  "version": "1.0.0",
  "description": "A tab management tool with rounded corners UI",
  "icons": {
    "16": "static/img/icon-16.png",
    "48": "static/img/icon-48.png",
    "128": "static/img/icon-128.png"
  },
  "action": {
    "default_title": "Tab Cleaner - Click to open",
    "default_icon": {
      "16": "static/img/icon-16.png",
      "48": "static/img/icon-48.png",
      "128": "static/img/icon-128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "assets/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "assets/opengraph_local_v2.js",
        "assets/image_capture_enhanced.js",
        "assets/screenshot_capture.js",
        "assets/pet.js",
        "assets/content.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "scripting",
    "identity",
    "contextMenus",
    "notifications"
  ],
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": [
        "personalspace.html",
        "sidepanel.html",
        "assets/*.js",
        "assets/*.css",
        "assets/card.html",
        "static/img/*",
        "test_opengraph_simple.html"
      ],
      "matches": ["<all_urls>"],
      "use_dynamic_url": true
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://tab-cleaner-mvp-app-production.up.railway.app http://localhost:8000"
  }
}